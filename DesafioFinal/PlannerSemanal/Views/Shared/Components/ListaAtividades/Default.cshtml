@model IEnumerable<PlannerSemanal.Models.Atividade>

@{
    Layout = null;
}

<div class="border border-light shadow rounded rounded-lg p-4" align="center">
    @if (Model.Count() > 0)
    {
        <ul class="list-group">
            @foreach (var item in Model)
            {
                <li class="list-group-item">
                    <div class="row">
                        <div class="col-2">
                            <span class="badge badge-info">@Html.DisplayFor(modelItem => item.Horario)</span>
                        </div>

                        <div class="col-6" align="left">
                            @Html.DisplayFor(modelItem => item.Nome)
                        </div>

                        <div class="col-4">
                            <a asp-action="AtualizarAtividade" asp-route-atividadeId="@item.AtividadeId" class="btn btn-sm btn-outline-primary rounded-circle"><i class="fa fa-pencil-square-o"></i></a>
                            <a id="btnExcluir" href="#" class="btn btn-sm btn-outline-danger rounded-circle" onclick="ConfirmarExclusao(@item.AtividadeId,'@item.Nome')"><i class="fa fa-times-circle"></i></a>
                            
                        </div>
                    </div>
                </li>
            }
        </ul>
    }
    else
    {
        <p class="alert alert-warning">Ainda não existem atividades cadastradas para este dia</p>
    }
</div>